<Window x:Class="Clip.InkCanv"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Clip"
        mc:Ignorable="d"
        ShowInTaskbar="False"
        WindowStyle="None"
        ResizeMode="NoResize"
        Topmost="True"
        AllowsTransparency="True"
        Background="Transparent"
        Title="InkCanv" Height="20" Width="230">
    <StackPanel Orientation="Horizontal">
        <Button x:Name="xBtn" Width="20" Content="X" Click="xBtn_Click"></Button>
        <Button x:Name="lineBtn" Width="40" Content="Line" Click="lineBtn_Click"></Button>
        <ComboBox Name="lineSizeCb" Width="40" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" SelectionChanged="lineSizeCb_Selected"></ComboBox>
        <Button x:Name="lineSelectBtn" Width="40" Content="select" Click="lineSelectBtn_Click"></Button>
        <Button x:Name="lineClearBtn" Width="40" Content="clear" Click="lineClearBtn_Click"></Button>
        <ComboBox Name="lineColorCb" Width="50" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" SelectionChanged="lineColorCb_Selected"></ComboBox>
    </StackPanel>
</Window>
